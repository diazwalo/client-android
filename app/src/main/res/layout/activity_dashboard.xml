<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.ulille.iut.agile.client_android.DashboardActivity">

    <Button
        android:id="@+id/home_button_cuve3"
        android:layout_width="353dp"
        android:layout_height="75dp"
        android:clickable="false"
        android:drawableStart="@drawable/home_dash_button"
        android:drawableLeft="@drawable/home_dash_button"
        android:drawablePadding="10dp"
        android:text="@string/home_button_dashboard"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_header4"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/home_header4"
        android:layout_width="482dp"
        android:layout_height="204dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/green_wall" />

    <Button
        android:id="@+id/dashboard_button_vider"
        android:layout_width="151dp"
        android:layout_height="39dp"
        android:background="@drawable/radius_button"
        android:onClick="onClicVider"
        android:text="@string/dashboard_button_vider"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_label_ville" />

    <TextView
        android:id="@+id/dashboard_label_date"
        android:layout_width="198dp"
        android:layout_height="49dp"
        android:text="@string/dashboard_label_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dashboard_image_meteo"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_button_cuve3"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/dashboard_label_ville"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:text="@string/dashboard_label_ville"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dashboard_image_meteo"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_button_cuve3"
        app:layout_constraintVertical_bias="0.174" />

    <ImageView
        android:id="@+id/dashboard_image_meteo"
        android:layout_width="105dp"
        android:layout_height="103dp"
        android:background="@drawable/radius_input"
        android:contentDescription="@string/dashboard_image_meteo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_button_cuve3"
        app:layout_constraintVertical_bias="0.034" />

</androidx.constraintlayout.widget.ConstraintLayout>
