<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.ulille.iut.agile.client_android.HomeActivity">

    <Button
        android:id="@+id/home_button_cuve"
        android:layout_width="361dp"
        android:layout_height="122dp"
        android:background="@drawable/radius_input"
        android:drawableLeft="@drawable/home_cuve_button"
        android:drawablePadding="10dp"
        android:onClick="onClickTank"
        android:text="@string/home_button_cuve"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_header"
        app:layout_constraintVertical_bias="0.11"
        android:drawableStart="@drawable/home_cuve_button" />

    <Button
        android:id="@+id/home_button_dashboard"
        android:layout_width="361dp"
        android:layout_height="122dp"
        android:background="@drawable/radius_input"
        android:drawableLeft="@drawable/home_dash_button"
        android:drawablePadding="10dp"
        android:onClick="onClickDashboard"
        android:text="@string/home_button_dashboard"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_button_mur"
        app:layout_constraintVertical_bias="0.426"
        android:drawableStart="@drawable/home_dash_button" />

    <Button
        android:id="@+id/home_button_mur"
        android:layout_width="361dp"
        android:layout_height="122dp"
        android:background="@drawable/radius_input"
        android:drawableLeft="@drawable/home_wall_button"
        android:drawablePadding="10dp"
        android:onClick="onClickArea"
        android:text="@string/home_button_mur"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_button_cuve"
        app:layout_constraintVertical_bias="0.084"
        android:drawableStart="@drawable/home_wall_button" />

    <ImageView
        android:id="@+id/home_header"
        android:layout_width="482dp"
        android:layout_height="204dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/green_wall" />

</androidx.constraintlayout.widget.ConstraintLayout>